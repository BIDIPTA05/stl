//sorting

#include<iostream>
#include<algorithm>
#include<vector>
using namespace std;
int main(){

    vector<int> v;
    v.push_back(95);
    v.push_back(2);
    v.push_back(9000);
    v.push_back(523);
    v.push_back(15);
    v.push_back(50);
//increasing order 
    sort(v.begin(), v.end());
//decreasing order sort
    sort(v.begin(), v.end(), greater <int>());
    
    
    
    //displaying ,, auto adjusting the datatype and size of the vector using aUTO KEYWORD
    for(auto a : v)
        cout << a << " ";
    return 0;
}
