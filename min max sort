#include<iostream>
#include<algorithm>
using namespace std;
int main(){

    //finding minimum of  more than 2 numbers;
    min(2,5);
    cout<<min({1,4,3,2,5,4,0,8,1,2,5,3,4});
 //same as for max
    
    return 0;
}



